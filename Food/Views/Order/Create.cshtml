@model Food.Models.Order
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Order</title>
    <link rel="stylesheet" href="~/css/Order_style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>

    <section id="Home">
        <nav>
            <div class="logo">
                <img src="~/Indexemages/logo.png">
            </div>

            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>

                <li><a asp-controller="Home" asp-action="Menu">Menu</a></li>

                <li><a asp-controller="Acount" asp-action="FeedBack">Review</a></li>
                <li><a asp-controller="Acount" asp-action="order">Order</a></li>
                <li><a asp-controller="Acount" asp-action="Regester"> Regester</a></li>
                <li><a asp-controller="Acount" asp-action="Login">Login</a></li>
            </ul>
           

        </nav>
    </section>

    <div class="order" id="Order">
        <h1><span>Order</span>Now</h1>

        <div class="order_main">

            <div class="order_image">
                <img src="~/Indexemages/order_image.png">
            </div>

            <form asp-controller="Order" asp-action="Create" method="post">

                <div class="input">
                    <p>First Name</p>
                    <input asp-for="FirstName" placeholder="First Name">
                </div>
                <div class="input">
                    <p>Last Name</p>
                    <input asp-for="LastName" placeholder="Last Name">
                </div>


                <div class="input">
                    <p>Number</p>
                    <input asp-for="Phone" placeholder="you number">
                </div>

                <div class="input">
                    <p>How Much</p>
                    <input asp-for=" Quantity" type="number" placeholder="how many order">
                </div>

                <div class="input">
                    <p>You Order</p>
                    <input asp-for="FoodName" placeholder="food name">
                </div>

                <div class="input">
                    <p>Address</p>
                    <input asp-for=" Address" placeholder="you Address">
                </div>


                <input type="submit" name="" value="Submit" class="order_btn">

            </form>

        </div>

    </div>

</body>
</html>
